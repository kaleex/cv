@startuml Tech_Stack
title Technology Stack

package "Frontend" #LightBlue {
    component "React 18" as react
    component "TypeScript" as ts
    component "Vite" as vite
    component "react-router-dom" as router
    component "CSS3" as css
}

package "Hosting & Infrastructure" #LightGreen {
    component "Cloudflare Workers" as workers
    component "Cloudflare CDN" as cdn
    component "Cloudflare Analytics" as analytics
    component "Cloudflare Registrar" as registrar
}

package "Development Tools" #LightYellow {
    component "VS Code" as vscode
    component "npm" as npm
    component "Wrangler CLI" as wrangler
    component "Git" as git
    component "GitHub" as github
}

package "Documentation" #LightCoral {
    component "Sphinx" as sphinx
    component "PlantUML" as plantuml
}

react --> ts : typed with
react --> vite : bundled by
react --> router : routing
react --> css : styled with

vite --> workers : deployed to
workers --> cdn : cached by
cdn --> analytics : tracked by

wrangler --> workers : deploys to
git --> github : pushes to

@enduml
