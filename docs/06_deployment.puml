@startuml Deployment_Architecture
title Deployment Architecture

cloud "Internet" as internet

cloud "Cloudflare Network" as cf {
    node "Edge Location (Global)" {
        component "Cloudflare Workers" as workers
        component "CDN Cache" as cdn
        database "Static Assets" as assets {
            storage "index.html"
            storage "*.js bundles"
            storage "*.css styles"
        }
    }
    
    component "Analytics" as analytics
    component "SSL/TLS" as ssl
}

node "Cloudflare Registrar" as registrar {
    component "alejandroquilez.dev" as domain
}

node "Development Machine" as dev {
    package "Frontend" as fe {
        component "Vite Dev Server" as vite
        component "React SPA" as react
        component "portfolio.ts" as data
    }
}

cloud "GitHub" as github {
    component "kaleex/cv" as repo
}

internet --> ssl : HTTPS
ssl --> domain
domain --> cdn
cdn --> workers : cache miss
workers --> assets

dev --> github : git push
github ..> workers : wrangler deploy

note right of workers
  Free tier:
  100,000 requests/day
  No cold starts
end note

note right of analytics
  Built-in analytics
  No cookies needed
  RGPD compliant
end note

@enduml
